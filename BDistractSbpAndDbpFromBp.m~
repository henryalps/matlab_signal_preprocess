function [sbppos,dbppos] = BDistractSbpAndDbpFromBp(bp, bppos)
%% 该方法针对的是只检出了DBP的信号，使用最简单的极值方式在两个DBP间寻找SBP
[segpos, seglength] = BDevideSegment(BDeriveConfidentSignalSegment(bppos));
%% 剔除掉那些只有一个点的数据段
segpos = segpos(seglength > 1);
seglength=seglength(seglength > 1);

sbppos = ones(1,length(bppos))*NaN;
bpindex = 1;
dbppos = sbppos;
%% 开始寻找DBP
for i=1:length(segpos)
    for j=1:seglenth(i) - 1
        sbppos(bpindex) = bppos(segpos(i  + j));
        [~ , dbppos(bpindex)] = max(bp(bppos(segpos(i  + j)), bppos(segpos(i  + j + 1))));
        dbppos(bpindex) = dbppos(dbpindex) + sbppos(sbpindex) - 1;
    end
    sbppos()
end

end